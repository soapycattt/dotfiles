    {
      "description": "capslock - hyper quick interact with screen",
      "manipulators": [
        {
          "description": "q = display screen saver",
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
